<p id="notice"></p>
<div class="container px-sm-0">
  <div id="error_explanation">
  </div>
  <div class="row ">
    <div class="col-md-5 bg-light text-center"><h3>登録情報編集</h3></div>
    <%= form_with model: @customer, url: admin_customer_path, method: :patch  do |f| %>
      <div class="col-md-12 my-4 mx-auto">
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :会員id, class: "px-5" %></th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th><%= f.label :名前, class: "px-5" %></th>
            <th><%= f.text_field :last_name %>　　　<%= f.text_field :first_name %></th>
          </tr>
          <tr>
            <th><%= f.label :フリガナ, class: "px-5" %></th>
            <th><%= f.text_field :last_name_kana %>　　　<%= f.text_field :first_name_kana %></th>
          </tr>
          <tr>
            <th><%= f.label :郵便番号, class: "px-5" %></th>
            <th><%= f.text_field :postal_code %></th>
          </tr>
          <tr>
            <th><%= f.label :住所, class: "px-5" %></th>
            <th><%= f.text_field :address, size: "60" %></th>
          </tr>
          <tr>
            <th><%= f.label :電話番号, class: "px-5" %></th>
            <th><%= f.text_field :telephone_number %></th>
          </tr>
          <tr>
            <th><%= f.label :メールアドレス, class: "px-5" %></th>
            <th><%= f.text_field :email %></th>
          </tr>
          <tr>
            <th><%= f.label :会員ステータス, class: "px-5" %></th>
            <th><%= f.radio_button :is_active, false %>
                <%= f.label :is_active,"有効", value: false %>
                <%= f.radio_button :is_active, true %>
                <%= f.label :is_active,"退会", value: true %></th>
          </tr>
          <tr>
            <th></th>
            <th><%= f.submit "編集内容を保存" , class: "btn btn-success btn-lg w-50" %></th>
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>