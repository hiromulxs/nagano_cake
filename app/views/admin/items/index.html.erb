<p id="notice"></p>
<div class="container px-sm-0">
  <div id="error_explanation">
  </div>
  <div class="row ">
    <div class="col-md-5 my-3 bg-light text-center"><h3>商品一覧</h3></div>
    <div class="col-md-5 pr-5 pt-3 text-right">
      <%= link_to "＋", new_admin_item_path, method: :get, class: "btn btn-primary btn-lg rounded-circle p-2" %><!--class: "btn btn-primary rounded-circle p-0"-->
    </div>
    <div class="col-md-9 my-4 mx-auto">
        <table class="table table-borderless ">
          <tr>
            <th><%#=  %>商品ID</th>
            <th><%#=  %>商品名</th>
            <th><%#=  %>税抜価格</th>
            <th><%#=  %>ジャンル</th>
            <th><%#=  %>ステータス</th>
          </tr>
          <% @items.each do |item| %>
            <tr>
              <th><%= item.id %></th>
              <th><%= link_to item.name, admin_item_path(item.id), class: "border-bottom" %></th>
              <th><%= item.price %></th>
              <th><%= item.genre.name %></th>
              <th>
                <% if item.is_active %>
                  販売中
                <% else %>
                  販売停止中
                <% end %>
              </th>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>