<p id="notice"></p>
<div class="container px-sm-0">
  <div id="error_explanation">
  </div>
  <div class="row">
    <div class="col-md-5 bg-light text-center"><h3>配送先編集</h3></div>
    <%= form_with model: @address, url: update_address_path(@address), method: :patch do |f| %>
      <div class="col-md-12 my-4">
        <table class="table table-hover table-inverse table-borderless">
          <thead>
            <tr>
              <th><%= f.label :郵便番号（ハイフンなし）, class: "px-5" %></th>
              <th><%= f.text_field :postal_code %></th><br>
            </tr>
            <tr>
              <th><%= f.label :住所, class: "px-5" %></th>
              <th><%= f.text_field :address, size: "50" %></th><br>
            </tr>
            <tr>
              <th><%= f.label :宛名, class: "px-5" %></th>
              <th><%= f.text_field :name %></th>
              <th><%= f.submit "変更内容を保存" , class: "mx-5 btn btn-success w-75" %></th>
            </tr>
          </thead>
        </table>
      </div>
    <% end %>
  </div>
</div>