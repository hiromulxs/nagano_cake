<p id="notice"></p>
<div class="container px-sm-0">
  <div id="error_explanation">
  </div>
  <div class="row">
    <div class="col-md-5 bg-light text-center"><h3>ジャンル一覧・追加</h3></div>
    <div class="col-md-9 my-4">
      <%= form_with model: @genre, url: admin_genres_path, method: :post  do |f| %>
        <table class="table table-hover table-inverse">
          <th><%= f.label :ジャンル名, class: "px-5" %></th>
          <th><%= f.text_field :name %></th>
          <th><%= f.submit "新規登録" , class: "mx-5 btn btn-success w-50" %></th>
        </table>
      <% end %>
    </div>
    <div class="col-md-6">
      <table class="table table-hover table-inverse">
        <thead class="bg-light">
          <tr>
            <th class="bg-light">ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success w-auto mt-2" %></td>
            <%#= link_to "Destroy", admin_genres_path, method: :delete, data: {confirm: "このジャンルを削除しますか？"} %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
