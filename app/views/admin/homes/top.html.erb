<p id="notice"></p>
<div class="container px-sm-0">
  <div id="error_explanation">
  </div>
  <div class="row ">
    <div class="col-md-3 my-3 bg-light text-center"><h3>注文履歴一覧</h3></div>
  </div>
  <div class="row ">
    <div class="col-md-12 my-4 mx-auto border-top boder-secondary">
      <table class="table table-borderless">
        <tr class="bg-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
          <% quantity = 0 %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at %>
              <% end %>
            </td>
            <td>
              <%= order.customer.last_name + order.customer.first_name %>
            <td>
              <% order.order_items.each do |order_item| %>
                <% quantity += order_item.quantity %>
              <% end %>
              <%= quantity %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>