<p id="notice"></p>
<div class="container px-sm-0">
  <div id="error_explanation">
  </div>
  <div class="row">
    <div class="col-md-5 bg-light text-center"><h3>マイページ</h3></div>
  </div>
  <div class="row">
    <div class="col-md-5 mt-4">
      <table>
        <tr>
          <th><h3>登録情報</h3></th>
          <th><%= link_to "編集する", customers_mypage_edit_path, class: "mx-5 btn btn-success w-75 btn-lg" %></th>
        </tr>
      </table>
    </div>
    <% @customers.each do |customer| %>
      <div class="col-md-8 ">
        <table class="table table-hover table-inverse table-bordered">
          <thead>
            <tr>
              <th>氏名</th>
              <th><%= customer.last_name %>　<%= customer.first_name %></th><br>
            </tr>
            <tr>
              <th>カナ</th>
              <th><%= customer.last_name_kana %>　<%= customer.first_name_kana %></th><br>
            </tr>
            <tr>
              <th>郵便番号</th>
              <th><%= customer.postal_code %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%= customer.address %></th>
            </tr>
            <tr>
              <th>電話番号</th>
              <th><%= customer.telephone_number %></th>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <th><%= customer.email %></th>
            </tr>
          </thead>
        </table>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-5 my-4">
      <table class="table table-hover table-inverse table-borderless">
        <tr>
          <th><h3>配送先</h3></th>
          <th><%= link_to "一覧を見る", addresses_path, class: "mx-5 btn btn-primary w-75 btn-lg" %></th>
        </tr>
        <tr>
          <th><h3>注文履歴</h3></th>
          <th><%= link_to "一覧を見る",addresses_path, class: "mx-5 btn btn-primary w-75 btn-lg" %></th>
        </tr>
      </table>
    </div>
  </div>
</div>